rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coins Collection - Simplified rules to match your existing pattern
    match /coins/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Community Stories
    match /communityStory/{storyId} {
      // Allow authenticated users to read stories
      allow read: if request.auth != null;
      // Allow authenticated users to update like count
      allow update: if request.auth != null && 
                   request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']);
    }

    // Story Likes
    match /storyLikes/{likeId} {
      // Allow users to create/delete their own likes
      allow create: if request.auth != null && 
                   request.resource.data.userId == request.auth.uid &&
                   request.resource.data.storyId is string &&
                   request.resource.data.timestamp is number;
      
      // Allow users to delete their own likes
      allow delete: if request.auth != null && 
                   resource.data.userId == request.auth.uid;
      
      // Allow reading likes
      allow read: if request.auth != null;
    }

    // Project Donations
    match /ProjectDonation/{donationId} {
      // Allow authenticated users to read all donations
      allow read: if request.auth != null;
      
      // Allow authenticated users to create donations
      allow create: if request.auth != null;
      
      // Allow authenticated users to update donations (for NFT minting, etc.)
      allow update: if request.auth != null;
      
      // Allow users to delete their own donations
      allow delete: if request.auth != null && 
                   resource.data.userId == request.auth.uid;
    }

    // Legacy donations collection (for backward compatibility)
    match /donations/{donationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Project Requests
    match /projectRequests/{projectId} {
      // Allow authenticated users to read all projects
      allow read: if request.auth != null;
      
      // Allow authenticated users to create projects
      allow create: if request.auth != null;
      
      // Allow authenticated users to update projects
      allow update: if request.auth != null;
      
      // Allow authenticated users to delete projects
      allow delete: if request.auth != null;
    }
  }
}
